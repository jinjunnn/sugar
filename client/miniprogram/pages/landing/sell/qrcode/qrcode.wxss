page {
    background-color: #f2f2f2;
}

.good_wrap {
    margin: 30rpx;
    background-color: white;
    border-radius: 20rpx;
}

.good_qrcode {
    height: 150rpx;
    width: 150rpx;
    padding: 20rpx 270rpx 10rpx 270rpx;
}

.image {
    width: 650rpx;
    height: 650rpx;
    padding: 0 20rpx 20rpx 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.good {
    margin: 5rpx;
    padding: 0rpx 15rpx 0rpx 15rpx;
    font-size: 28rpx;
    text-align: center;
    width: 650rpx;
}

.good_note {
    text-align: left;
    color: #888888;
    font-size: 24rpx;
}

.good_price {
    color: #D54547;
    font-size: 28rpx;
    text-align: center;
    padding-bottom: 10rpx;
}

.good_brand {
    padding: 40rpx 0 5rpx 0;
}

.good_name {
    padding-bottom: 5rpx;
    /* 以下多行文字溢出 */
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.sub_text {
    color: #3f3f3f;
    font-size: 24rpx;
    text-align: center;
    padding-bottom: 40rpx;
}
