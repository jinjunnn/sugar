/* pages/user/intergal/intergal.wxss */
page {
    background-color: #f2f2f2;
}

.title_wrap {
    margin: 20rpx;
    padding: 20rpx 20rpx 40rpx 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
}

.title_first_part {
    justify-content: space-between;
    display: -webkit-flex;
}

.title_img_wrap {
    width: 90rpx;
    height: 90rpx;
}

.title_img {
    width: 120rpx;
    height: 120rpx;
}

.title_content_wrap {
    width: 450rpx;
    font-size: 24rpx;
    text-align: right;
    padding: 10rpx 20rpx 10rpx 0rpx;
}

.title_content_text_intergal {
    font-size: 40rpx;
    padding-bottom: 20rpx;
}

.title_content_text_record {
    color: rgba(0, 0, 0, .3);
}

.title_content_text_detail {
    color: rgba(0, 0, 0, .3);
    font-size: 24rpx;
    padding-top: 30rpx;
}

.signin_wrap {
    background-color: #ffffff;
    border-radius: 10rpx;
    margin: 20rpx;
}

.signin_title {
    margin: 20rpx;
    padding: 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.signin_content_wrap {
    display: -webkit-flex;
    justify-content: space-around;
    font-size: 20rpx;
    text-align: center;
    padding: 20rpx;
}

.signin_content_content_wrap {}

.signin_content_content_day {
    padding: 20rpx 0rpx 20rpx 0rpx;
}

.signin_content_content_amount {
    padding: 15rpx;
    border: 1rpx solid #000000;
    border-radius: 50%;
}

.signin_content_content_amount_gray {
    padding: 15rpx;
    color: rgba(0, 0, 0, .3);
    border: 1rpx solid rgba(0, 0, 0, .3);
    border-radius: 50%;
}

.signin_content_content_index {
    color: rgba(0, 0, 0, .3);
    padding-top: 20rpx;
}

.button_signin_signin {
    margin: 0rpx 20rpx 20rpx 20rpx;
}

.button_not_signin {
    background-color: #D54547;
    margin: 20rpx;
    color: white;
    opacity: 0.6;
}

.button_signin {
    background-color: #D54547;
    margin: 20rpx;
    color: white;
}

.task_subwrap {
    display: -webkit-flex;
    justify-content: space-between;
    font-size: 20rpx;
    text-align: left;
    padding: 20rpx;
    margin: 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
}


.image_goods {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}

.image_arrow {
    padding-top: 60rpx;
    width: 30rpx;
    height: 30rpx;
}

.task_subwrap_wrap {
    width: 420rpx;
}

.task_subwrap_title {
    padding-top: 10rpx;
    font-size: 24rpx;
}

.task_subwrap_content {
    padding-top: 10rpx;
    
}

.task_subwrap_content_detail{
    color: #D54547;
}